<div class="container py-5">
  <p class="<%= flash[:color] %>"><%= flash[:notice] %></p>
  <div class="row mt-2 mb-3 offset-1 text-center">
    <h3 class="px-4 title-background"><%= "#{@customer.last_name}#{@customer.first_name}さんの会員情報編集" %></h3>
  </div>

  <div>
    <%= render 'layouts/errors', obj: @customer %>
  </div>

  <%= form_with model: @customer, url: admin_customer_path(@customer), local: true do |f| %>
    <div class="row">
      <div class="col-10 mx-auto">
        <table class="table table-borderless">
          <tr>
            <td class="col-4">会員ID</td>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <td class="col-4"><%= f.label :last_name, "氏名" %></td>
            <td><%= f.text_field :last_name, autofocus: true, class: "form-control" %></td>
            <td><%= f.text_field :first_name, class: "form-control" %></td>
          </tr>
          <tr>
            <td class="col-4"><%= f.label :last_name_kana, "フリガナ" %></td>
            <td><%= f.text_field :last_name_kana, class: "form-control" %></td>
            <td><%= f.text_field :first_name_kana, class: "form-control" %></td>
          </tr>
          <tr>
            <td class="col-4"><%= f.label :postal_code, "郵便番号" %></td>
            <td><%= f.text_field :postal_code, class: "form-control" %></td>
          </tr>
          <tr>
            <td class="col-4"><%= f.label :address, "住所" %></td>
            <td colspan="2"><%= f.text_field :address, :size=> "50", class: "form-control" %></td>
          </tr>
          <tr>
            <td class="col-4"><%= f.label :telephone_number, "電話番号" %></td>
            <td><%= f.text_field :telephone_number, class: "form-control" %></td>
          </tr>
          <tr>
            <td class="col-4"><%= f.label :email, "メールアドレス" %></td>
            <td><%= f.email_field :email, class: "form-control" %></td>
          </tr>
          <tr>
            <td class="col-4">会員ステータス</td>
            <td>
              <%= f.radio_button :is_active, true %>
              <%= f.label :is_active_true, "有効" %>
              <%= f.radio_button :is_active, false, class: "ml-3" %>
              <%= f.label :is_active_false, "退会" %>
            </td>
          </tr>
        </table>
      </div>
    </div>
    <div class="form-group offset-4">
      <%= f.submit "変更を保存", class: "btn btn-success btn-lg" %>
    </div>
  <% end %>
</div>