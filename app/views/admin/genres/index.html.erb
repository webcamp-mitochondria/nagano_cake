<div class='container mt-4'>
  <div class='row'>
    <div class="col-8">
      <h3 class="ml-5">ジャンル一覧・追加</h3>
      <%= render 'layouts/errors', obj: @genre %>
      <%= form_with model: @genre, url: admin_genres_path do |f| %>
        <div class="field my-5">
          <%= f.label :name, "ジャンル名", class: 'font-weight-bold mr-5' %>
          <%= f.text_field :name, placeholder: "ジャンル名", class: 'mr-5' %>
          <%= f.submit "新規登録", class: 'btn btn-success font-weight-bold w-25' %>
        </div>
      <% end %>
      <div class="col-6">
        <% if @genres.exists? %>
          <table class="table table-bordered border-bottom">
            <thead>
              <tr>
                <th class="table-dark text-center">ジャンル</th>
                <th class="table-dark"></th>
              </tr>
            </thead>
            <tbody>
              <% @genres.each do |genre| %>
                <tr>
                  <td class="table-light"><%= genre.name %></td>
                  <td class="table-light text-center"><%= link_to "編集する", edit_admin_genre_path(genre.id), class: 'btn btn-success' %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% end %>
      </div>
    </div>
  </div>
</div>