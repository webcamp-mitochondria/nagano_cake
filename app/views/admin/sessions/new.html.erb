<div class="container mt-3 session-content">
  <h5><span class="page_title col ml-4"><strong>管理者 </strong>ログイン</span></h5>
  <div class="row">
    <div class="col-md-8 col-10 mx-auto my-5">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group form-inline">
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, class:"form-control ml-5 w-50 border border-dark", autofocus: true, autocomplete: "email", :placeholder => "sample@exmple.com" %>
        </div>
      
        <div class="form-group form-inline">
          <%= f.label :password, "パスワード　　" %>
          <%= f.password_field :password, class:"form-control ml-5 w-50 border border-dark", autocomplete: "current-password" %>
        </div>
      
        <%# if devise_mapping.rememberable? %>
          <!--<div class="field">-->
            <!--<%#= f.check_box :remember_me %>-->
            <!--<%#= f.label :remember_me %>-->
          <!--</div>-->
        <%# end %>
      
        <div class="actions">
          <%= f.submit "ログイン" , class:"btn btn-primary admin-login px-5 py-2 mt-4" %>
        </div>
      <% end %>
    </div>
  </div>
</div>