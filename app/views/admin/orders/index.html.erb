<div class='container mt-4'>
  <div class='row'>
    <div class="col-12">
      <h3>注文履歴一覧</h3>
      <table class="table table-bordered border-bottom">
        <thead>
          <tr>
            <th class="table-dark col-3">購入日時</th>
            <th class="table-dark col-3">購入者</th>
            <th class="table-dark col-3">注文個数</th>
            <th class="table-dark col-3">注文ステータス</th>
          </tr>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td class="table-light">
              <%= link_to admin_order_path(order) do %>
                <%= l order.created_at %>
              <% end %>
            </td>
            <td class="table-light">
              <%= link_to order_admin_customer_path(order.customer) do %>
                <%= order.customer.last_name + order.customer.first_name %>
              <% end %>
            </td>
            <td class="table-light"><%= order.order_details.sum(:amount) %></td>
            <td class="table-light"><%= order.status_i18n %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <%= paginate @orders %>
    </div>
  </div>
</div>
