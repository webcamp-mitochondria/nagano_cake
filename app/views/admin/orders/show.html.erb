<div class='container'>
  <div class='row'>
    <div class="col-12">
      <h3 class="m-5">注文履歴詳細</h3>
      <tr>
        <th>購入者</th>
        <td>
          <%= link_to admin_customer_path(@order.customer) do %>
            <%= @order.customer.last_name + @order.customer.first_name %>
          <% end %>
        </td>
      </tr>
      <tr>
        <th>注文日</th>
        <td><%= l @order.created_at, format: :short %></td>
      </tr>
      <tr>
        <th>配送先</th>
        <td>
          〒<%= @order.postal_code.to_s.insert(3, "-") %><%= @order.address %><br>
          <%= @order.name %>
        </td>
      </tr>
      <tr>
        <th>支払方法</th>
        <td><%= t @order.payment_method %></td>
      </tr>
      <tr>
        <th>注文ステータス</th>
        <td>
          <%= form_with model: @order, url: admin_order_path, method: :patch do |f| %>
            <%= f.select :status, Order.status_i18n.invert %>
            <%= f.submit "更新", class: 'btn btn-success' %>
          <% end %>
        </td>
      </tr>
      <div class="col-9">
        <table class="table">
          <thead>
            <tr>
              <th>商品名</th>
              <th>単価(税込)</th>
              <th>数量</th>
              <th>小計</th>
              <th>製作ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @order_details.each do |order_detail| %>
              <tr>
                <td><%= order_detail.item.name %></td>
                <td><%= order_detail.purchase_price.to_s(:delimited) %></td>
                <td><%= order_detail.amount %></td>
                <td><%= (order_detail.purchase_price * order_detail.amount).to_s(:delimited) %></td>
                <%= form_with model: ordered_detail, url: admin_order_detail_path, method: :patch do |f| %>
                <td>
                  <%= f.select :production_status, OrderDetail.production_status_i18n.invert %>
                  <%= f.submit "更新", class: 'btn btn-success' %>
                </td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="col-3">
        <tr>
          <th>商品合計</th>
          <td><%= @order.total_price.to_s(:delimited) %>円</td>
        </tr>
        <tr>
          <th>送料</th>
          <td><%= @order.delivery_charge %>円</td>
        </tr>
        <tr>
          <th>請求金額合計</th>
          <th><%= @order.billing_amount.to_s(:delimited) %>円</th>
        </tr>
      </div>
    </div>
  </div>
</div>