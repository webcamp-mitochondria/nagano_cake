<h3>商品一覧</h3>
<%= link_to new_admin_item_path do %>
  <i class="fa-solid fa-circle-plus"></i>
<% end %>
<table class="table">
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @items.each do |item| %>
        <td><%= item.id %></td>
        <td><%= link_to item.name, admin_item_path %></td>
        <td><%= item.price.to_s(:delimited) %></td>
        <td><%= item.genre.name %></td>
        <td><%= item.is_sell %></td>
      <% end %>
    </tr>
  </tbody>
</table>

