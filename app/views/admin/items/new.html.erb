<h3>商品新規登録</h3>
<%= render 'layouts/errors', obj: @item %>
<%= form_with model: @item do |f| %>
  <div class="field">
    <%= f.label :image, "商品画像" %>
    <%= f.file_field :image, accept: 'image/*' %>
  </div>
  <div class="field">
    <%= f.label :name, "商品名" %>
    <%= f.text_field :name, placeholder: "商品名" %>
  </div>
  <div class="field">
    <%= f.label :explanation, "商品説明" %>
    <%= f.text_area :explanation, placeholder: "ここに説明文を記述します" %>
  </div>
  <div class="field">
    <%= f.label :genre_id, "ジャンル" %>
    <%= f.select :genre_id, @genres, include_blank: "--選択して下さい--" %>
  </div>
  <div class="field">
    <%= f.label :price, "税抜価格" %>
    <%= f.text_field :price, placeholder: "1000" %>円
  </div>
  <div class="field">
    <%= f.label :is_sell, "販売ステータス" %>
    
    <%= f.radio_button :is_sell, true %>
    <%= f.label :is_sell, "販売中" %>
    
    <%= f.radio_button :is_sell, false %>
    <%= f.label :is_sell, "販売停止中" %>
  </div>
  <div class="field">
    <%= f.submit "新規登録", class: 'btn btn-success' %>
  </div>
<% end %>