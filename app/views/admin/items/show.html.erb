<div class='container mt-4'>
  <h3 class="m-5">商品詳細</h3>
  <div class='row'>
    <div class="col-md-4 mr-5">
      <%= image_tag @item.get_image(350, 300) %>
    </div>
    <div class="col-md-6">
      <table>
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @item.explanation %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td>
            税込価格<br>
            (税抜価格)
          </td>
          <td><%= @item.with_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td>
            <% if @item.is_sell == true %>
              <p class="text-success font-weight-bold m-2">販売中</p>
            <% else %>
              <p class="text-secondary font-weight-bold m-2">販売停止中</p>
            <% end %>
          </td>
        </tr>
      </table>
      <%= link_to "編集する", edit_admin_item_path(@item), class: 'btn btn-success font-weight-bold w-25 m-5' %>
    </div>
  </div>
</div>