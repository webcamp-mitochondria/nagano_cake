<h3>商品詳細</h3>
<div class="image">
  <%= @item.get_image(350,300) %>
</div>
<table>
  <tr>
    <td>商品名</td>
    <td><%= @item.name %></td>
  </tr>
  <tr>
    <td>商品説明</td>
    <td><%= @item.explanation %></td>
  </tr>
  <tr>
    <td>ジャンル</td>
    <td><%= @item.genre.name %></td>
  </tr>
  <tr>
    <td>
      税込価格<br>
      (税抜価格)
    </td>
    <td><%= @item.price.with_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</td>
  </tr>
  <tr>
    <td>販売ステータス</td>
    <td>
      <% if @item.is_sell == true %>
        <p class="text-success"><strong>販売中</strong></p>
      <% else %>
        <p class="text-secondary"><strong>販売停止中</strong></p>
      <% end %>
    </td>
  </tr>
</table>
<%= link_to "編集する", edit_admin_item_path(@item), class: 'btn btn-success' %>