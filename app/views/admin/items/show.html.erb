<div class='container mt-4'>
  <h3 class="m-5">商品詳細</h3>
  <div class='row'>
    <div class="col-md-4 mr-5">
      <%= image_tag @item.get_image(350, 300) %>
    </div>
    <div class="col-md-6">
      <div class="row">
        <p class="col-5">商品名</p>
        <p class="col-7"><%= @item.name %></p>
      </div>
      <div class="row">
        <p class="col-5">商品説明</p>
        <p class="col-7"><%= @item.explanation %></p>
      </div>
      <div class="row">
        <p class="col-5">ジャンル</p>
        <p class="col-7"><%= @item.genre.name %></p>
      </div>
      <div class="row">
        <p class="col-5">
          税込価格<br>
          (税抜価格)
        </p>
        <p class="col-7"><%= @item.with_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</p>
      </div>
      <div class="row">
        <p class="col-5">販売ステータス</p>
        <% if @item.is_sell == true %>
          <p class="col-5 text-success font-weight-bold m-2">販売中</p>
        <% else %>
          <p class="col-5 text-secondary font-weight-bold m-2">販売停止中</p>
        <% end %>
      </div>
      <%= link_to "編集する", edit_admin_item_path(@item), class: 'btn btn-success font-weight-bold w-25 m-5' %>
    </div>
  </div>
</div>

