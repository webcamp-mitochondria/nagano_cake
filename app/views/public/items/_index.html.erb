<% items.each do |item| %>
  <%= link_to item_path(item), class:"text-reset" do %>
      <div class="card col-xs-2 mt-2 mx-auto" style='width:200px, height:200px'>
        <div class="card-image">
          <%= image_tag item.get_image(200,200) %>

        <% if item.is_sell == false %>
          <h5 class="text-danger">売り切れ</h5>
        <% elsif %>
          <h5 class="card-title"><%= link_to item.name, item_path(item) %></h5>
          <p class="card-price my-2">¥<%= item.with_tax_price.to_s(:delimited) %></p>
        <% end %>
        </div>
      </div>
  <% end %>
<% end %>