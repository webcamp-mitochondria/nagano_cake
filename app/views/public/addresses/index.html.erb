<div class='container'>
  <div class='row'>
    <div class="col-8">
      <h3 class="m-5">配送先登録/一覧</h3>
      <%= form_with model: @address, url: addresses_path, method: :post do |f| %>
        <div class="form-group row">
          <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: 'col-sm-4' %>
          <%= f.text_field :postal_code, placeholder: "0000000", class: 'col-sm-4' %>
        </div>
        <div class="form-group row">
          <%= f.label :address, "住所", class: 'col-sm-4' %>
          <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: 'col-sm-8' %>
        </div>
        <div class="form-group row">
          <%= f.label :name, "宛名", class: 'col-sm-4' %>
          <%= f.text_field :name, placeholder: "令和道子", class: 'col-sm-4' %>
          <%= f.submit "新規登録", class: 'btn btn-success ml-auto font-weight-bold w-25' %>
        </div>
      <% end %>

      <% if @addresses.exists? %>
        <table class="table table-bordered">
          <tr class="table-active">
            <td>郵便番号</td>
            <td>住所</td>
            <td>宛名</td>
            <td></td>
          </tr>
          <% @addresses.each do |address| %>
            <tr>
              <td><%= address.postal_code %></td>
              <td><%= address.address %></td>
              <td><%= address.name %></td>
              <td class="text-center">
                <%= link_to "編集する", edit_address_path(address), class: 'btn btn-success font-weight-bold' %>
                <%= link_to "削除する", address_path(address), method: :delete, data: { confirm: "本当に削除してもよろしいですか？" }, class: 'btn btn-danger font-weight-bold' %>
              </td>
            </tr>
          <% end %>
        </table>
      <% end %>
    </div>
  </div>
</div>