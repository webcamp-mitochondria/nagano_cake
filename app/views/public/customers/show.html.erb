<div class='container'>
  <div class='row'>
    <div class="col-8">
      <h3 class="m-5">マイページ</h3>
      <div class="d-flex">
        <h3 class="font-weight-bold mr-5">登録情報</h3>
        <%= link_to "編集する", information_edit_customers_path, class: 'btn btn-success font-weight-bold' %>
      </div>
      <table class="table table-bordered my-3">
        <tr>
          <td class="table-active">氏名</td>
          <td><%= @customer.last_name + "\s" + @customer.first_name %></td>
        </tr>
        <tr>
          <td class="table-active">カナ</td>
          <td><%= @customer.last_name_kana + "\s" + @customer.first_name_kana %></td>
        </tr>
        <tr>
          <td class="table-active">郵便番号</td>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <td class="table-active">住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td class="table-active">電話番号</td>
          <td><%= @customer.phone_number %></td>
        </tr>
         <tr>
          <td class="table-active">メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
        </table>
      <div class="d-flex my-3">
        <h3 class="font-weight-bold mr-5">配送先</h3>
        <%= link_to "一覧を見る", addresses_path, class: 'btn btn-primary font-weight-bold' %>
      </div>
      <div class="d-flex">
        <h3 class="font-weight-bold mr-4">注文履歴</h3>
        <%= link_to "一覧を見る", orders_path, class: 'btn btn-primary font-weight-bold' %>
      </div>
    </div>
  </div>
</div>