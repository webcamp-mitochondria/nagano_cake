<h2>会員情報編集</h2>

<%= form_with model: @customer, url: information_customers_path, method: :patch do |f| %>
  <%= render "layouts/errors", obj: @customer %>

  <div class="field">
    <%= f.label :氏名 %>
    <%= f.text_field :last_name, autofocus: true %>
    <%= f.text_field :first_name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :フリガナ %>
    <%= f.text_field :last_name_kana, autofocus: true %>
    <%= f.text_field :first_name_kana, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :postal_code, "郵便番号" %>
    <%= f.text_field :postal_code, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :address, "住所" %>
    <%= f.text_field :address, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :phone_number, "電話番号" %>
    <%= f.text_field :phone_number, autofocus: true %>
  </div>

    <div class="field">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <div class="actions">
    <%= f.submit "編集内容を保存", class: 'btn btn-success' %>
  </div>
<% end %>