<div class='container'>
  <div class='row'>
    <div class="col-8">
      <h3 class="m-5">会員情報編集</h3>
      <%= form_with model: @customer, url: information_customers_path, method: :patch do |f| %>
        <%= render "layouts/errors", obj: @customer %>
        <div class="form-group row">
          <%= f.label :氏名, class: 'col-sm-3' %>
          <%= f.text_field :last_name, autofocus: true, class: 'col-sm-3 mr-5' %>
          <%= f.text_field :first_name, autofocus: true, class: 'col-sm-3' %>
        </div>

        <div class="form-group row">
          <%= f.label :フリガナ, class: 'col-sm-3' %>
          <%= f.text_field :last_name_kana, autofocus: true, class: 'col-sm-3 mr-5' %>
          <%= f.text_field :first_name_kana, autofocus: true, class: 'col-sm-3' %>
        </div>

        <div class="form-group row">
          <%= f.label :postal_code, "郵便番号", class: 'col-sm-3' %>
          <%= f.text_field :postal_code, autofocus: true, class: 'col-sm-3' %>
        </div>

        <div class="form-group row">
          <%= f.label :address, "住所", class: 'col-sm-3' %>
          <%= f.text_field :address, autofocus: true, class: 'col-sm-9' %>
        </div>

        <div class="form-group row">
          <%= f.label :phone_number, "電話番号", class: 'col-sm-3' %>
          <%= f.text_field :phone_number, autofocus: true, class: 'col-sm-3' %>
        </div>

          <div class="form-group row">
          <%= f.label :email, "メールアドレス", class: 'col-sm-3' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'col-sm-3' %>
        </div>
        <div class="actions d-flex justify-content-around">
          <%= f.submit "編集内容を保存", class: 'btn btn-success font-weight-bold w-25' %>
          <%= link_to "退会する", check_customers_path, class: 'btn btn-danger font-weight-bold' %>
        </div>
      <% end %>
    </div>
  </div>
</div>