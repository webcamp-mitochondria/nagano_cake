<div class="container p-3">
  <div class="row">
    <div class="col-md-12">
      <h3>注文履歴一覧</h3>
      <table class="table">
        <tr>
          <td>注文日</td>
          <td>配送先</td>
          <td>注文商品</td>
          <td>支払金額</td>
          <td>ステータス</td>
          <td>注文詳細</td>
        </tr>
        <% @orders.each do |order| %>
        <tr>
          <td>
            <%= link_to  order_path(order.id) do %>
            <%= order.created_at.strftime('%Y/%m/%d') %>
            <% end %>
          </td>
          <td><%= order.address %></td>
          <td>
            <ul class="list-item" style="list-style: none;">
              <% order.order_details.each do |order_detail|  %>
                <li><%= order_detail.item.name %></li>
              <% end %>
            </ul>
          </td>
          <td><%= order.total_price.to_s(:delimited) %>円</td>
          <td><%= order.status_i18n %></td>
          <td><%= link_to "表示する", order_path(order.id), class: "btn btn-info" %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>