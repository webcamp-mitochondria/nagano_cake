<div class="container p-3">
  <div class="row">
    <div class="col-md-12">
    <h3>注文確認<h3>

      <table class="table">
        <thead>
          <tr>
            <td>商品名</td>
            <td>単価(税込)</td>
            <td>数量</td>
            <td>小計</td>
          </tr>
        </thead>
          <% @cart_items.each do |cart_item| %>
          <tbody>
            <tr>
              <td>
                <%= image_tag cart_item.item.get_image(200,150) %>
                <%= cart_item.item.name %>
              </td>
              <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
              <td><%= cart_item.amount %></td>
              <td><%= cart_item.item.with_tax_price * cart_item.amount %></td>
            </tr>

          <% end %>
        </tbody>
      </table>

      <table class="table">

        <tr>
          <td>送料</td>
          <td><%= @delivery_charge %></td>
        </tr>
        <tr>
          <td>商品合計</td>
          <td><%= @cart_items_price.to_s(:delimited) %></td>
        </tr>
        <tr>

          <td>請求額</td>
          <td><%= @total_price.to_s(:delimited) %></td>
        </tr>
      </table>

      <h4>支払い方法</h4>
        <% if @selected_payment_method == "credit_card" %>
          クレジットカード
        <% else %>
          銀行振込
        <% end %>

      <h4>お届け先</h4>
        <%= '〒' + @order.postal_code + ' ' + @order.address %><br>
        <%= @order.name %>
    	<div>
    	 <%= form_with model:@order, url: orders_path do |f| %>
    	 <%= f.hidden_field :postal_code, :value => @order.postal_code %>
    	 <%= f.hidden_field :address, :value => @order.address %>
    	 <%= f.hidden_field :name, :value => @order.name %>
    	 <%= f.hidden_field :payment_method, :value => @order.payment_method %>
    	 <%= f.hidden_field :delivery_charge, :value => 800 %>
    	 <%= f.hidden_field :total_price, :value => @total_price %>
    	 <%= f.hidden_field :status, :value => "waiting" %>
    	 <%= f.submit "注文を確定する" %>
    	 <% end %>

    </div>
  </div>
</div>