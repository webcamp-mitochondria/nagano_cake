<div class="container pt-3">
  <h4><span class="page_title col-10 ml-4">新規会員登録</span></h4>
  <div class="row">
    <div class="col mx-auto mt-3 mb-3">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
      
        <div class="form-group form-inline form-group row">
          <%= f.label :last_name, "名前", class:"col-2 justify-content-start " %>
          <%= f.label :last_name, "(姓)", class:"col-1" %>
          <%= f.text_field :last_name, class:"form-control col-2 mr-4 border border-dark", autofocus: true, :placeholder => "長野" %>
          <%= f.label :first_name, "(名)", class:"col-1" %>
          <%= f.text_field :first_name, class:"form-control col-2 border border-dark", autofocus: true, :placeholder => "太郎" %>
        </div>
        
        <div class="form-group form-inline form-group row">
          <%= f.label :last_name_kana, "フリガナ", class:"col-2 justify-content-start " %>
          <%= f.label :last_name_kana, "(セイ)", class:"col-1" %>
          <%= f.text_field :last_name_kana, class:"form-control col-2 mr-4 border border-dark", autofocus: true, :placeholder => "ナガノ" %>
          <%= f.label :first_name_kana, "(メイ)", class:"col-1" %>
          <%= f.text_field :first_name_kana, class:"form-control col-2 border border-dark", autofocus: true, :placeholder => "タロウ" %>
        </div>
        
        <div class="form-group form-inline form-group row">
          <%= f.label :email, "メールアドレス", class:"col-3 justify-content-start "%>
          <%= f.email_field :email, class:"form-control col-2 border border-dark", autofocus: true, autocomplete: "email", :placeholder => "sample@exmple.com" %>
        </div>
        
        <div class="form-group form-inline form-group row">
          <%= f.label :postal_code, "郵便番号（ハイフンなし）", class:"col-3 justify-content-start " %>
          <%= f.text_field :postal_code, class:"form-control col-2 border border-dark", autofocus: true, :placeholder => "0000000" %>
        </div>
        
        <div class="form-group form-inline form-group row">
          <%= f.label :address, "住所", class:"col-3 justify-content-start " %>
          <%= f.text_field :address, class:"form-control col-5 border border-dark", autofocus: true, :placeholder => "長野県長野市新町0-0" %>
        </div>
        
        <div class="form-group form-inline form-group row">
          <%= f.label :phone_number, "電話番号（ハイフンなし", class:"col-3 justify-content-start " %>
          <%= f.text_field :phone_number, class:"form-control col-2 border border-dark", autofocus: true, :placeholder => "0000000000" %>
        </div>
      
        <div class="form-group form-inline form-group row">
          <%= f.label :password, "パスワード(6文字以上)", class:"col-3 justify-content-start " %>
          <% if @minimum_password_length %>
          <!--<em>(<%#= @minimum_password_length %> characters minimum)</em>-->
          <% end %>
          <%= f.password_field :password, class:"form-control col-2 border border-dark", autocomplete: "new-password" %>
        </div>
      
        <div class="form-group form-inline form-group row">
          <%= f.label :password_confirmation, "パスワード(確認用)", class:"col-3 justify-content-start " %>
          <%= f.password_field :password_confirmation, class:"form-control col-2 border border-dark", autocomplete: "new-password" %>
        </div>
      
        <div class="form-group form-inline form-group row">
          <%= f.submit "新規登録", class:"form-control btn btn-success mt-3 px-5 py-1 col-2 offset-3" %>
        </div>
      <% end %>
    </div>
  </div>
  <h5><span class="page_title col-10 ml-5">既に登録済みの方</span></h5>
  <div class="col-8 py-3 ml-5">
    <span><strong><%= render "public/shared/links" %>からログインしてください。</strong></span>
  </div>
</div>